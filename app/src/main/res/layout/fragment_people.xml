<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PeopleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitoloPersone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/seleziona_persone"
            android:textSize="@dimen/title"
            android:textColor="@color/nero" />

        <ImageView
            android:id="@+id/imgViewSingolo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

            <!--app:srcCompat="@drawable/substractragazza"-->

        <ImageView
            android:id="@+id/imgViewCoppia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <ImageView
            android:id="@+id/imgViewGruppo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgViewPage2"
                android:layout_width="65dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/circles2" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>