<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BudgetFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitoloBudget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Seleziona il tuo budget"
            android:textSize="24sp"
            android:textColor="#000"/>

        <ImageView
            android:id="@+id/imgViewPortafoglio"
            android:layout_width="match_parent"
            android:layout_weight="15"
            android:layout_height="0dp"
            app:srcCompat="@drawable/wallet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >


            <!-- Similar attributes can be applied for RubberRangePicker as well-->
            <com.jem.rubberpicker.RubberRangePicker
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                app:minValue="0"
                app:maxValue="100"
                app:elasticBehavior="linear"
                app:dampingRatio="0.4"
                app:stiffness="400"
                app:stretchRange="36dp"
                app:defaultThumbRadius="16dp"
                app:normalTrackWidth="4dp"
                app:highlightTrackWidth="8dp"
                app:normalTrackColor="#AAAAAA"
                app:highlightTrackColor="#BA1F33"
                app:highlightDefaultThumbOnTouchColor="#CD5D67" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txtSeekbarStart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:text="aaaa"/>
                <TextView
                    android:id="@+id/txtSeekbarEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#000"
                    android:text="aaaa"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnAvanti"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imgViewGruppo1"
                android:layout_width="70dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/circles" />

        </LinearLayout>

    </LinearLayout>



</FrameLayout>